<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view_book_data" model="ir.ui.view">
        <field name="name">product.template.form.book_data</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <header>
                    <field name="x_is_isbn" invisible="1"/>
                    <button name="action_refresh_book_data"
                            type="object"
                            string="Refresh Book Data"
                            class="oe_highlight"
                            invisible="not x_is_isbn"/>
                    <button name="action_view_on_hardcover"
                            type="object"
                            string="View on Hardcover"
                            class="btn-secondary"
                            invisible="not x_is_isbn"/>
                </header>
            </xpath>
            <xpath expr="//field[@name='x_author']" position="attributes">
                <attribute name="invisible">not x_is_isbn</attribute>
            </xpath>
            <xpath expr="//field[@name='x_publisher']" position="attributes">
                <attribute name="invisible">not x_is_isbn</attribute>
            </xpath>
            <xpath expr="//field[@name='x_publication_date']" position="attributes">
                <attribute name="invisible">not x_is_isbn</attribute>
            </xpath>
        </field>
    </record>
</odoo>
