<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view_book_data" model="ir.ui.view">
        <field name="name">product.template.form.inherit.book_data</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <button name="action_fetch_hardcover_data"
                        string="Fetch from Hardcover"
                        type="object"
                        class="oe_link"
                        icon="fa-download"
                        invisible="not barcode"/>
            </xpath>
        </field>
    </record>
</odoo>
