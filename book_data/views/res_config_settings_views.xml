<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form_book_data" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.book_data</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div id="book_data_settings">
                    <block name="book_data" title="Hardcover (Book Data)" class="mt-3">
                        <setting>
                            <field name="hardcover_api_key" nolabel="1" placeholder="Hardcover API Key (e.g., your-hardcover-api-token)"/>
                            <div class="text-muted small mt-1">
                                Get your API key from <a href="https://hardcover.app/account/api" target="_blank">hardcover.app</a>
                            </div>
                        </setting>
                    </block>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
